{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": [
      "es2017"
    ],
    "baseUrl": "./src",
    "paths": {
      "@test/*": ["./__tests__/*"],
      "@src/*": [ "./src/*" ]
    }
  },
  "exclude": [
    "Plugin",
    "node_modules"
  ]
}
